{
    "id": "com.github.mnzsyu.mattermost-pagerduty-plugin",
    "name": "PagerDuty Plugin",
    "description": "PagerDuty integration for Mattermost.",
    "homepage_url": "https://github.com/mnzsyu/mattermost-pagerduty-plugin",
    "support_url": "https://github.com/mnzsyu/mattermost-pagerduty-plugin/issues",
    "release_notes_url": "https://github.com/mnzsyu/mattermost-pagerduty-plugin/releases/tag/v0.5.1",
    "icon_path": "assets/pagerduty-icon.svg",
    "version": "0.5.1",
    "min_server_version": "6.2.1",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "Configure PagerDuty integration",
        "footer": "For more information, visit: https://github.com/mnzsyu/mattermost-pagerduty-plugin",
        "settings": [
            {
                "key": "PagerDutyAPIKey",
                "display_name": "PagerDuty API Key",
                "type": "text",
                "help_text": "API key for your PagerDuty account. Create one in PagerDuty > Configuration > API Access.",
                "placeholder": "Enter your API key",
                "default": ""
            },
            {
                "key": "WebhookSecret",
                "display_name": "Webhook Secret",
                "type": "generated",
                "help_text": "Secret for verifying incoming webhooks from PagerDuty.",
                "regenerate_help_text": "Regenerate webhook secret."
            }
        ]
    },
    "props": {
        "root_url": "/plugins/com.github.mnzsyu.mattermost-pagerduty-plugin"
    }
}
